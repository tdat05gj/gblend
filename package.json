{
  "name": "gblend-messaging-dapp",
  "version": "1.0.0",
  "description": "Decentralized messaging app with encrypted chat on Gblend Testnet",
  "main": "index.js",
  "scripts": {
    "build": "cd frontend && npm install && npm run build",
    "dev": "cd frontend && npm run dev",
    "install-all": "npm install && cd frontend && npm install",
    "cleanup": "pwsh -ExecutionPolicy Bypass -File cleanup.ps1",
    "compile": "hardhat compile",
    "deploy": "hardhat run scripts/deploy.js --network gblend"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "gblend",
    "messaging",
    "dapp",
    "web3"
  ],
  "author": "Gblend Team",
  "license": "MIT",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.8",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "chai": "^4.3.10",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.7.2",
    "hardhat": "^2.19.4"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.5"
  }
}
